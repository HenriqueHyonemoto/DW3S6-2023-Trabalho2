@html.extend('layout', function(model){

@html.block('content', function(model){


<main>

    <div class="container-fluid px-4">
        <h1 class="mt-4">@model.title</h1>
        <ol class="breadcrumb mb-4">
            <li class="breadcrumb-item active">@model.title</li>
        </ol>
        <div class="row">
            <div class="col-xl-12">
                <div class="card mb-4">
                    <div class="col-2 ms-1 mt-1 mb-2">

                        <button type="button" class="btn btn-primary"
                            onclick="window.location.href = '/album/insertAlbum'">Novo Album</button>
                    </div>
                    <div class="card-header">
                        <i class="fas fa-table me-1"></i>
                        Listagem de Album
                    </div>


                    <div class="card-body">
                        <table id="example" class="stripe" style="width:100%">
                            <thead>
                                <tr>
                                    <th>Ação</th>                                    
                                    <th>Número Do Album</th>
                                    <th>Nome Do Album</th>
                                    <th>Data De Publicação</th>
                                    <th>Distribuidora</th>
                                </tr>
                            </thead>
                            <tbody>
                                @model.data.registro.forEach(function(registro){
                                <tr>                                    
                                    td><a href="/album/openalbumUpdate/@registro.albumid" class="btn btn-info btn-sm"><i
                                        class="fa fa-magnifying-glass"></i>Visualizar</a></td>
                                    <td>@registro.numero_album</td>
                                    <td>@registro.nome_album</td>
                                    <td>@registro.data_publicacao</td>
                                    <td>@registro.nome_distribuidora</td>
                                </tr>
                                })
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>Ação</th>                                    
                                    <th>Número Do Album</th>
                                    <th>Nome Do Album</th>
                                    <th>Data publicacao</th>
                                    <th>Distribuidora</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

})

})

<script>
    var table = new DataTable('#example', {
        dom: 'B<"top"fi>rt<"bottom"lp><"clear">',
        columnDefs: [
            {
                targets: 3,
                render: DataTable.render.datetime('DD/MM/YYYY')
            }
        ],
        buttons: [
            'copy', 'csv', 'pdf'
        ],
    });

    table.buttons().container()
        .appendTo($('.col-sm-12:eq(0)', table.table().container()));

    // function visualizaAluno(idPar) {
    //     alert("Novo aluno com parâmetro:" + idPar);

    // }

    // new $.fn.dataTable.Buttons(table, {
    //     buttons: [
    //         'copy', 'excel', 'pdf'
    //     ]
    // });
</script>